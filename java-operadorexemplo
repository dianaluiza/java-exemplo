operador exemplo 03
package basico1;

public class operadorExemplo02 {
	public static void main(String[] args) {
		int a = 3;
		int b = 4;
		int c = 7;
		
		if(a++ >= b)
		System.out.println(--c);
		else
		System.out.println(c++);
	}

}
